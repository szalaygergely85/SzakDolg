<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".RegisterActivity"
    >
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleMarginStart="32dp"
        app:title="Title"
        android:elevation="4dp"
        />
    <ScrollView
        android:layout_below="@id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="40dp">

            <EditText
                android:id="@+id/edtRegName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Display Name"
                android:inputType="textPersonName"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edtRegEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/edt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edtRegPass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/edt_pass"
                android:inputType="textPassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edtRegPass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/edt_pass"
                android:inputType="textPassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/edtRegPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Phone number"
                android:inputType="phone"
                android:maxLines="1" />



            <Button
                android:id="@+id/btnRegReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="@string/btn_reg" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>