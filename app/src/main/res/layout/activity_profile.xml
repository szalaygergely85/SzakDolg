<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/profBoardToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleMarginStart="32dp"
        app:title="Title"
        android:elevation="4dp"
        />


    <com.google.android.material.imageview.ShapeableImageView
            android:layout_below="@id/profBoardToolbar"
                android:id="@+id/profPic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_blank_profile"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profTxtName"
        android:text="Gergely Szalay"
        android:layout_below="@id/profPic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="11pt"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profTxtEmail"
        android:text="szalaygergely@gmail.com"
        android:textSize="7pt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profTxtName"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/profDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profTxtEmail"
        android:layout_margin="15dp"/>
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/profBtnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Change Password"
        android:layout_below="@id/profDivider"
        android:textSize="10pt"/>
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/profBtnDeleteContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Delete Contact"
        android:layout_below="@id/profDivider"
        android:textSize="10pt"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/profBtnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profBtnChangePass"
        android:textSize="10pt"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/profBtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profBtnSignOut"
        android:textSize="10pt"/>


</RelativeLayout>